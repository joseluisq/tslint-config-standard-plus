{
    "name": "tslint-config-standard-plus",
    "version": "2.3.0",
    "description": "A TSLint config for JavaScript Standard Style with a plus of useful rules.",
    "author": {
        "name": "Jose Quintana",
        "url": "http://git.io/joseluisq"
    },
    "license": "MIT",
    "repository": "joseluisq/tslint-config-standard-plus",
    "keywords": [
        "tslint",
        "config",
        "standard",
        "standardjs",
        "typescript",
        "code style",
        "semantic"
    ],
    "main": "tslint.json",
    "files": [
        "tslint.json",
        "tslint.legacy.json",
        "README.md",
        "LICENSE.md"
    ],
    "scripts": {
        "test": "yarn lint && jest",
        "lint": "tslint --format stylish --project tsconfig.json"
    },
    "peerDependencies": {
        "tslint": ">=5.0.0",
        "typescript": ">=2.9.0"
    },
    "dependencies": {
        "tslint-clean-code": "^0.2.10",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-no-circular-imports": "^0.7.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.41",
        "git-testing-hook": "^0.3.0",
        "jest": "^26.6.3",
        "ts-jest": "^26.5.5",
        "ts-node": "^9.1.1",
        "tslint": "^6.1.3",
        "typescript": "^4.2.4"
    },
    "jest": {
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "transformIgnorePatterns": [],
        "testMatch": [
            "**/test/**.spec.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "node"
        ]
    }
}
