{
  "name": "tslint-config-standard-plus",
  "version": "2.3.0-beta.0",
  "description": "A TSLint config for JavaScript Standard Style with a plus of useful rules.",
  "author": {
    "name": "Jose Quintana",
    "url": "http://git.io/joseluisq"
  },
  "license": "MIT",
  "repository": "joseluisq/tslint-config-standard-plus",
  "keywords": [
    "tslint",
    "config",
    "standard",
    "standardjs",
    "typescript",
    "code style",
    "semantic"
  ],
  "main": "tslint.json",
  "files": [
    "tslint.json",
    "tslint.legacy.json",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "test": "yarn lint && jest",
    "lint": "tslint --format stylish --project tsconfig.json"
  },
  "peerDependencies": {
    "tslint": ">=5.0.0",
    "typescript": ">=2.9.0"
  },
  "dependencies": {
    "tslint-clean-code": "^0.2.10",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-no-circular-imports": "^0.7.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/node": "^10.14.7",
    "git-testing-hook": "^0.3.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [],
    "testMatch": [
      "**/test/**.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
