{
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.rulers": [
    120
  ],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "test-lib": true,
    "lib": true,
    "coverage": true,
    "npm": true
  },
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "tslint.enable": false,
  "tslint.autoFixOnSave": false,
  "eslint.enable": true,
  "eslint.autoFixOnSave": true
}
