{
  "compileOnSave": false,
  "include": [
    "test/**.spec.*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "declaration": false,
    "sourceMap": true,
    "pretty": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@types/node",
      "@types/jest"
    ],
    "lib": [
      "es6"
    ]
  }
}
